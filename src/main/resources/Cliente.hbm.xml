<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.mycompany.mavenproject1.Cliente" table = "cliente">
      
      <meta attribute = "class-description">
         Detalle de cliente. 
      </meta>
      
      <id name = "IDcliente" type = "int" column = "IDcliente">
         <generator class="native"/>
      </id>
      
      <property name = "Nombre" column = "Nombre" type = "string"/>
      <property name = "Telefono" column = "Telefono" type = "string"/>
      <property name = "Direccion" column = "Direccion" type = "string"/>
      <property name = "Estado" column = "Estado" type = "int"/>
   </class>
</hibernate-mapping>