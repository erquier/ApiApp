<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.mycompany.mavenproject1.Reservacion" table = "reservacion">
      
      <meta attribute = "class-description">
         Reservacion. 
      </meta>
      
      <id name = "IDreserva" type = "int" column = "IDreserva">
         <generator class="native"/>
      </id>
      
      <property name = "IDcliente" column = "IDcliente" type = "int"/>
      <property name = "fecha_llegada" column = "fecha_llegada" type = "date"/>
      <property name = "fecha_salida" column = "fecha_salida" type = "date"/>
      
   </class>
</hibernate-mapping>
